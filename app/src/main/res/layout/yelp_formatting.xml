<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shop_icon"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_marginTop="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/questionmark" />

    <TextView
        android:id="@+id/first_line"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/shop_icon"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Example application"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/rating_icon"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:layout_below="@+id/first_line"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/shop_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/stars00" />

    <TextView
        android:id="@+id/rating_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/rating_icon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/shop_icon"
        android:gravity="center_vertical"
        android:paddingBottom="3pt"
        android:text="0 Ratings"
        android:textSize="12dp" />

    <ImageButton
        android:id="@+id/yelp_button"
        android:layout_width="46dp"
        android:layout_height="32dp"
        android:layout_below="@id/first_line"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/rating_icon"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/yelp_logo" />
</RelativeLayout>