<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="6dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/shop_icon"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginTop="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/questionmark" />

        <TextView
            android:id="@+id/first_line"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/shop_icon"
            android:gravity="center_vertical"
            android:text="Example application"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/rating_icon"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_below="@+id/first_line"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/shop_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/stars00" />

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/rating_icon"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/shop_icon"
            android:gravity="center_vertical"
            android:paddingBottom="3pt"
            android:text="0 Ratings"
            android:textSize="12dp" />
        <ImageButton
            android:id="@+id/yelp_button"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/first_line"
            android:layout_toRightOf="@id/rating_icon"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/yelp_logo"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 mi"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/chevron_panel"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/increase"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/up_chevron" />

            <TextView
                android:id="@+id/roll_weight"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:text="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="1px"
                />

            <ImageButton
                android:id="@+id/decrease"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/down_chevron" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>